{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "ignorePatterns": ["server-build/", "doc/", "build/"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "indent": ["error", 2],
    "eol-last": ["error", "always"]
  },
  "globals": {
    "process": "readonly",
    "jest": "readonly",
    "global": "readonly",
    "module": "readonly",
    "exports": "readonly",
    "require": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
