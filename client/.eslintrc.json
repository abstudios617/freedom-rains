{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "storybook"],
  "ignorePatterns": ["build/"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "react/prop-types": 0,
    "indent": ["error", 2, {
      "ignoredNodes": ["TemplateLiteral"]
    }],
    "eol-last": ["error", "always"],
    "template-curly-spacing" : "off"
  },
  "globals": {
    "process": "readonly",
    "jest": "readonly",
    "global": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.stories.*"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}
